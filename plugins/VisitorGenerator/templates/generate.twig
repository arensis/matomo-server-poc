{% extends 'admin.twig' %}

{% block content %}
    <div piwik-content-block
         content-title="{{ 'VisitorGenerator_VisitorGenerator'|translate|e('html_attr') }}">
        {{ 'VisitorGenerator_GeneratedVisitsFor'|translate(siteName, days) }}<br/>
        {{ 'VisitorGenerator_NumberOfGeneratedActions'|translate }}: {{ nbActionsTotal }}<br/>
        {{ 'VisitorGenerator_NbRequestsPerSec'|translate }}: {{ nbRequestsPerSec }}<br/>
        {{ timer }}<br/>
        <p><strong>
                {% if browserArchivingEnabled %}
                    {{ 'VisitorGenerator_AutomaticReprocess'|translate }}
                {% else %}
                    {{ 'VisitorGenerator_ReRunArchiveScript'|translate('<a href="https://matomo.org/docs/setup-auto-archiving/">', '</a>')|raw }}
                {% endif %}
            </strong>
        </p>
    </div>

{% endblock %}
